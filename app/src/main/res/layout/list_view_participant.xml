<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/participant_status_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_alarms"
        android:padding="15dp" />

    <TextView
        android:id="@+id/participant_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/participant_status_image"
        android:text="Participant Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/particpant_score_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/participant_name_text"
        android:layout_alignLeft="@id/participant_name_text"
        android:text="Participant Score"/>

</RelativeLayout>